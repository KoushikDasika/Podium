<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Share your presentations in a beautiful way with Podium">
  	<title>Podium</title>
  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
  	<%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= filepicker_js_include_tag %>
    <%= csrf_meta_tags %>
    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-41705142-1', 'auto');
        ga('require', 'displayfeatures');
        ga('send', 'pageview');

      </script>
    <% else %>
      <script>
        function ga(){}
      </script>
    <% end %>
      <link rel="shortcut icon" href="/img/favicon.png" type="image/png">
      <link rel="icon" href="/img/favicon.png" type="image/png">
  </head>

  <body class="<%= @show ? 'show' : ''%>" onload="loaded()">

		<%= render 'layouts/header'%>
      <script>
        new gnMenu( document.getElementById( 'gn-menu' ) );
      </script>

<div class='row'>
  <div class='col-xs-12'>
			<% flash.each do |name, msg| %>
        <%= content_tag(:div, class: "alert alert-success fade in secondary-#{name}") do %>
          <i class="entypo-attention"></i>&nbsp;&nbsp;<%=msg%>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        <% end %>
      <% end %>
  </div>
</div>


			<%= yield %> 
      
    <script src="http://popcornjs.org/code/dist/popcorn-complete.js"></script>
    <script>
      $("[data-toggle=tooltip]").tooltip();
    </script>   
  </body>
  
</html>
