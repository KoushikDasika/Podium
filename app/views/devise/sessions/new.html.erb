<div class='container'>
	<div class='row'>
		<div class="col-sm-6 col-sm-offset-3">

		<h2>Login</h2>

		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form'}) do |f| %>

		<%= f.error_notification :class => "error" %>

		<div class="row">

			<div class="input-group">
			  <span class="input-group-addon"><i class="entypo-mail"></i></span>
			  <%= f.input :email, label: false, :class => "form-control", :placeholder => "E-mail"%>
			</div>

			<div class="input-group">
			  <span class="input-group-addon"><i class="entypo-lock"></i></span>
			  <%= f.input :password, label: false, :class => "form-control", :placeholder => "Password"%>
			</div>

			<div class="col-sm-8">
				<%= f.input :remember_me, as: :boolean %>
			</div>

			<div class="col-sm-8">
		  	<%= f.submit "SIGN IN", class: "button prefix btn btn-primary" %>
		  	<%= link_to "Forgot your password?", new_password_path(resource_name) %>
		  </div>
		</div>
		<% end %>

		</div>
	</div>
</div>
