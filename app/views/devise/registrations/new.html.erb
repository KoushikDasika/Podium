<div class='row'>
	<div class='large-12 columns'>
		
		<div class="small-6 large-centered columns">


<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form', id: 'register'}) do |f| %>

<%= f.error_notification :class => "error" %>

<div class="row collapse">

 	<div class="small-1 columns avatar-container">
 	<% if @user.filepicker_url_avatar %>
		<img src="<%= @user.filepicker_url_avatar %>" class= "avatar">
	<% else %>
		<i class="icon-camera"></i>
	<% end %>
	</div>

	<div class="small-11 columns"> 
			<button class="avatar-button button success">Upload a Picture</button>
			<input id="avatar-url" type="hidden" name="user[filepicker_url_avatar]" value="<%= @user.filepicker_url_avatar %>"/>
	</div>
	<div class="small-1 columns"><span class="prefix"><span class="icon-user"></div>

	<div class="small-11 columns"> 
		<%= f.input :name, label: false, :placeholder => "Name" %>
	</div>

	<div class="small-1 columns"><span class="prefix"><span class="icon-envelope"></div>
	<div class="small-11 columns">
			<%= f.input :email, label: false, :placeholder => "E-mail"%>
	</div>

	<div class="small-1 columns"><span class="prefix"><span class="icon-lock"></div>
		<div class="small-11 columns">
		<%= f.input :password, label: false, :placeholder => "Password"%>
	</div>

  <div class="large-12 columns">
  	<%= f.submit "REGISTER", class: "button prefix" %>
  </div>
</div>
<% end %>
</div>
</div>
</div>

