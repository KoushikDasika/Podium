<div class='container'>
	<div class='row'>
		<div class="col-sm-6 col-sm-offset-3">

		<h2>Login</h2>

		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form'}) do |f| %>

		<%= f.error_notification :class => "error" %>

		<div class="row">
			<div class="col-sm-1"><span class="prefix"><span class="icon-envelope"></div>
			<div class="col-sm-11">
					<%= f.input :email, label: false, :placeholder => "E-mail"%>
			</div>

			<div class="col-sm-1"><span class="prefix"><span class="icon-lock"></div>
				<div class="col-sm-11">
				<%= f.input :password, label: false, :placeholder => "Password"%>
			</div>

			<div class="col-sm-12">
				<%= f.input :remember_me, as: :boolean %>
			</div>

			<div class="col-sm-12">
		  	<%= f.submit "SIGN IN", class: "button prefix" %>
		  	<%= link_to "Forgot your password?", new_password_path(resource_name) %>
		  </div>
		</div>
		<% end %>

		</div>
	</div>
</div>
