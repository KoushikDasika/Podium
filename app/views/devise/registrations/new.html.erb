<!-- <h2>Sign up</h2> -->

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

<%= f.error_notification %>

<div class="name"><span class="icon-user"></div><%= f.input :name, label: false, :placeholder => "Name"%>
<div class="email"><span class="icon-envelope"></div><%= f.input :email, label: false,:placeholder => "E-mail"%>
<div class="password"><span class="icon-lock"></div><%= f.input :password, label: false,:placeholder => "Password"%>
<!-- <%= f.input :remember_me, as: :boolean %>  -->

  <div class="register">
  	<%= f.submit "REGISTER", class: "btn btn-primary" %>
  </div>
<% end %>

