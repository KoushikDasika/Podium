
<div class='row'>
	<div class='large-12 columns'>
		<!-- <a class="lines-icon"></a> -->
		<div id="pt-main" class="pt-perspective">
			<% @project.slides.each do |slide| %>
				<div class="pt-page">
					<% if slide.mimetype == "video/mp4" %>
						<video width='100%' height='100%'>
							<source src="<%= slide.filepicker_url %>">
						</video>
					<% else %>
					<img src="<%= slide.filepicker_url %>/convert?w=1920&h=1080&fit=scale" data-transition="<%= @project.transition %>">
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>


