
			<!-- <li class="slide" data-id="<%= slide.id %>"> -->
			<%= content_tag_for :li, slide, data: { id: slide.id, mimetype: slide.mimetype } do %>
			<% if slide.mimetype == "video/mp4" %>
				<video width='100%' height='100%'>
					<source src="<%= slide.filepicker_url_thumb %>">
				</video>
			<% else %>
				<% unless slide.filepicker_url.blank? %>
					<%= filepicker_image_tag slide.filepicker_url_thumb, width: 234, height: 164, fit: 'clip' %>
				<% else %>
					<div class="blank" id="empty"></div>
				<% end %>
			<% end %>
		    <ul class="slide-tools" id="2">
	          	<li><%= link_to(slide, method: :delete, data: { confirm: 'Are you sure?' }) do %>
							<span class="delete"><i class="icon-remove"></i></span>
							<% end %></li>
	      </ul>
	    <% end %>
