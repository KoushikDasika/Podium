<div class='container'>
	<div class='row'>
		<div class="col-sm-6 col-sm-offset-4">

		<h2>Sign up</h2>

			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form', id: 'register',  role: 'form'}) do |f| %>

			<%= f.error_notification :class => "error" %>

			<div class="row">
				<div class="col-sm-6 col-xs-6">
					<div class="form-group">
						<div class="input-group">
							<div class="col-sm-2 col-xs-2 sign-in">
						  	<span class="input-group-addon"><i class="entypo-user"></i></span>
						  </div>
						  <div class="col-sm-10 col-xs-10 sign-in">
						  	<%= f.input :name, label: false, :class => "form-control", :placeholder => "Name", :size => 16, :maxlength => 15 %>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="input-group">
							<div class="col-sm-2 col-xs-2 sign-in">
						  	<span class="input-group-addon"><i class="entypo-mail"></i></span>
						  </div>
						  <div class="col-sm-10 col-xs-10 sign-in">
						  	<%= f.input :email, label: false, :class => "form-control", :placeholder => "E-mail"%>
						  </div>
						</div>
					</div>
					<div class="form-group">
						<div class="input-group">
							<div class="col-sm-2 col-xs-2 sign-in">
						  	<span class="input-group-addon"><i class="entypo-lock"></i></span>
							</div>
						  <div class="col-sm-10 col-xs-10 sign-in">
						  	<%= f.input :password, label: false, :class => "form-control", :placeholder => "Password"%>
						  </div>
						</div>
					</div>
					
					<%=f.input :referral_code, :as => :hidden, :input_html => { :value => session[:referral] } %>
					
					<div class="form-group">
					  <div class="col-sm-10 col-xs-10 sign-in">
					  	<%= f.submit "REGISTER", class: "button prefix btn btn-primary" %>
					  </div>
				  </div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>


